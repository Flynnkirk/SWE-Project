<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <!--An editable box is made with a new task prompt for users.-->

    <!--A button to save the new task created-->


    <EditText
        android:id="@+id/newTaskText"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@null"
        android:hint="New Task"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/newTaskTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newTaskText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/transparent"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <!--A button to add task to Google Calendar-->

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="110dp"
        android:background="#8E9CE8"
        android:backgroundTint="#8592DA"
        android:text="Add to Calendar"
        android:textColor="@android:color/black"
        android:textColorLink="#000000" />


</RelativeLayout>